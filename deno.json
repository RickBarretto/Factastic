{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-dom/client": "npm:react-dom@^18.3.1/client",
    "@types/react": "npm:@types/react@^18.3.5",
    "@types/react-dom": "npm:@types/react-dom@^18.3.0",
    "vite": "npm:vite@^5.4.2",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.1",
    "typescript": "npm:typescript@^5.5.4",
    "axios": "npm:axios@^1.7.5",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^2.5.2",
    "class-variance-authority": "npm:class-variance-authority@^0.7.0",
    "lucide-react": "npm:lucide-react@^0.441.0",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.0",
    "tailwindcss": "npm:tailwindcss@^3.4.10",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "postcss": "npm:postcss@^8.4.45"
  },
  "tasks": {
    "dev": "deno run -A npm:vite || npm run dev",
    "build": "deno run -A npm:vite build || npm run build", 
    "preview": "deno run -A npm:vite preview || npm run preview",
    "lint": "deno lint"
  }
}